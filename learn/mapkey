

mode = map, imap, nmap, vmap, ...


keyname = 

<BS>           Backspace <--
<Tab>          Tab
<CR>           Enter
<Enter>        Enter
<Return>       Enter
<Esc>          Escape
<Space>        Space
<Up>           Up arrow
<Down>         Down arrow
<Left>         Left arrow
<Right>        Right arrow
<F1> - <F12>   Function keys 1 to 12
#1, #2..#9,#0  Function keys F1 to F9, F10
<Insert>       Insert
<Del>          Delete
<Home>         Home
<End>          End
<PageUp>       Page-Up
<PageDown>     Page-Down
<bar>          the '|' character, which otherwise needs to be escaped '\|'
<C-S-v>         ctrl + shift + v

sau hai_cham la :expresion

mode <keyname> :expression



nmap vmap imap
nnoremap vnoremap inoremap onoremap cnoremap tnoremap


:let mapleader = ";"
  <leader> = ;
:nnoremap <leader>d dd

#recursive
:nmap - dd
:nmap \ -

\  sẽ run -, - run dd

#delete 
:nunmap -
:nunmap \

#recursive-non
:nmap x dd
:nnoremap \ x
\  sẽ run x default, tức là xoá 1 char
